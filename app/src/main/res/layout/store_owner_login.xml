<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEDDB"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".StoreOwnerLoginView">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="@string/store_owner_login"
        android:textColor="#393E46"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submitLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/store_owner_submit_login_button"
        android:backgroundTint="#00ADB5"
        android:textColor="#393E46"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeOwnerPasswordLogin" />

    <Button
        android:id="@+id/storeOwnerRegisterRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00ADB5"
        android:gravity="center"
        android:text="@string/store_owner_register"
        android:textColor="#393E46"
        android:textColorHighlight="#00ADB5"
        android:textColorLink="#00ADB5"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submitLogin" />

    <Button
        android:id="@+id/storeOwnerShopperRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="@string/store_owner_shopper_redirect_button"
        android:backgroundTint ="#00ADB5"
        android:textColor="#393E46"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeOwnerRegisterRedirect" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/storeOwnerPasswordLogin"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginTop="12dp"
        android:background="#B1A599"
        android:hint="@string/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeOwnerEmailLogin" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/storeOwnerEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:layout_marginTop="72dp"
        android:background="#B1A599"
        android:hint="@string/emailShopper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>